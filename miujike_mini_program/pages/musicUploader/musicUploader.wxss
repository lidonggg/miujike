/* pages/videoUploader/videoUploader.wxss */

.music-uploader-container {
  width: 100vw;
  height: 200rpx;
  border-bottom: 1rpx solid #d8d8d8;
}

.audio-recorder, .audio-listen, .audio-upload {
  width: 200rpx;
  height: 60rpx;
  color: white;
  font-size: 36;
  font-weight: 500;
  border-radius: 12rpx;
}

.audio-listen, .audio-upload {
  margin-left: 40rpx;
}

progress{
  margin: 20rpx;
}

.add-cover-img {
  width: 310rpx;
  height: 310rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.one-input-item {
  height: 100rpx;
}

label {
  font-size: 30rpx;
  width: 160rpx;
  text-align: right;
}

input {
  height: 54rpx;
  width: 560rpx;
  border: 1rpx solid #979797;
  font-size: 28rpx;
}

.one-textarea-item{
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin-top: 23rpx;
}

textarea{
  width: 560rpx;
  height: 240rpx;
  border: 1rpx solid #979797;
  font-size: 28rpx;
  margin-bottom: 110rpx;
}

.submit-buttom {
  height: 100rpx;
  font-size: 40rpx;
  width: 100vw;
  color: white;
  position: fixed;
  bottom: 0;
  border-radius: 0;
}
