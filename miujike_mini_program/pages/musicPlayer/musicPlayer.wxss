/* pages/musicPlayer/musicPlayer.wxss */

.cover-container {
  height: 750rpx;
  width: 750rpx;
  position: relative;
}

.cover-container image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.info-text {
  color: white;
}

.title-info {
  position: absolute;
  left: 40rpx;
  bottom: 100rpx;
  font-weight: 500;
  font-size: 36rpx;
}

.singer-info {
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;
  font-size: 28rpx;
}

progress {
  width: 100%;
}

.controller-container {
  width: 750rpx;
  height: 240rpx;
  border-bottom: 1rpx solid #d8d8d8;
  position: relative;
}

.duration-show-text {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  font-size: 24rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.target-contoller {
  width: 75rpx;
  height: 58rpx;
}

.status-contoller {
  width: 210rpx;
  height: 210rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
