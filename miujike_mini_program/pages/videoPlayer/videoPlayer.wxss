/* pages/videoPlayer/videoPlayer.wxss */
.video-container{
  width: 750rpx;
  height: 510rpx;
  border-radius: 0;
  border-bottom: 1rpx solid #D8D8D8
}

.video-container .the-video{
  height: 400rpx;
  width: 100%;
}

.video-container .video-detail-container{
  width: 100%;
  height: 100rpx;
}

.video-container .video-detail-container .first-line {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center
}

.video-container .video-detail-container .first-line .duration{
  text-align: center;
  font-size: 32rpx;
  line-height: 40rpx;
  border-radius: 12rpx;
  height: 40rpx;
  width: 100rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
}

.video-container .video-detail-container .first-line .play-times{
  font-size: 32rpx;
}

.video-container .video-detail-container .second-line{
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.video-container .video-detail-container .second-line{
  font-size: 30rpx;
}

.video-container .video-detail-container .second-line text{
  font-size: 36rpx;
}


.comment-container{

}

.comment-container .comment-tip{
  display: inline-flex;
  font-size: 30rpx;
  border-radius: 12rpx;
  height: 50rpx;
  width: 110rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}