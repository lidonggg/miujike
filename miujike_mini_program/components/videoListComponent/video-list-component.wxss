@import "../../app.wxss";

.one-video-item {
  width: 700rpx;
  height: 400rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  position: relative;
  margin-left: 25rpx;
}

.one-video-item .cover-img {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.one-video-item .info-container {
  position: absolute;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  left: 0;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
}

.left-part {
  width: 460rpx;
}

.right-part{
  display: flex;
}

.right-part .behavior-icon {
  margin-left: 40rpx;
  margin-top: 10rpx;
}

.right-part .add-eggs-icon {
  width: 42rpx;
  height: 70rpx;
}

.share-button {
  /* background-color: rgba(255, 255, 255, 0); */
  border: 0rpx solid rgba(255, 255, 255, 0);
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 2
}

.share-icon {
  width: 50rpx;
  height: 70rpx;
  position: relative;
}

.share-image-show{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1
}

.duration-container {
  color: white;
  background-color: #ccc;
  font-size: 28rpx;
  border-radius: 6rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.play-times-container {
  color: white;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.bottom-part {
  height: 50rpx;
}

.title-singer, .original-singer {
  color: white;
}

.title-singer {
  font-size: 26rpx;
}

.original-singer {
  font-size: 22rpx;
}

.model-btn {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
}

.play-icon {
  margin: 28rpx 36rpx;
  border-top: 26rpx solid transparent;
  border-left: 36rpx solid #f9e351;
  border-bottom: 22rpx solid transparent;
}
