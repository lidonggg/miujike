/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.yellow-color-bg{
  background-color: #F9E351;
}

.light-yellow-color-bg{
  background-color: #F3F0DF;
}

.gray-color-bg{
  background-color: #D8D8D8
}

.fill-container{
  width: 100%;
  height: 100%
}

.yellow-color-text{
  color: #F9E351;
}

.gray-color-text{
  color: #8d8d8d;
}

.light-gray-color-text{
  color: #a6a6a6;
}

.red-color-text{
  color: #D26282;
}

.deep-red-color-text{
  color: #D0021B
}

.yellow-color-border{
  border: 2rpx solid #F9E351;
}

.red-color-border{
  border: 2rpx solid #D26282;
}

.gray-color-border{
  border: 2rpx solid #a6a6a6;
}

.flex-center-layout-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.flex-center-layout-col{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.inline-flex-center-layout-col{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.flex-left-layout-row{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap
}

.font-size-80rpx{
  font-size: 80rpx;
}

.hide-view{
  display: none;
}

.stem-container,.one-option>text {
  font-size: 34rpx;
}

.model-btn{
	position:absolute;
    left:0;
    top:0;
    bottom:0;
    right:0;
    margin:auto;
    width:100rpx;
    height:100rpx;
    border-radius:50%;
    background-color: rgba(0,0,0,.3);
}
.play-icon{
    margin:28rpx 36rpx;
    border-top:26rpx solid transparent;
    border-left:36rpx solid #fff;
    border-bottom:22rpx solid transparent;
}

.global-border-radius{
  border-radius: 12rpx;
}

.works-swiper {
  height: calc(100vh - 110rpx);
}

.works-swiper swiper-item {
  height: 100%;
  width: 100%;
  position: relative;
}

.text-overflow-hidden{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}

.share-button {
  /* background-color: rgba(255, 255, 255, 0); */
  border: 0rpx solid rgba(255, 255, 255, 0);
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 2
}