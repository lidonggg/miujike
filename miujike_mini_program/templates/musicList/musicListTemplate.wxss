.one-music-item {
  margin-left: 25rpx;
  width: 700rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 0;
  border-bottom: 1rpx solid #d8d8d8;
}

.music-icon {
  margin-top: 10rpx;
  width: 80rpx;
  height: 80rpx;
  float: left
}

.left-part .music-detail-container {
  width: 420rpx;
}

.title-container{
  width:190rpx;
  display:inline-block;
  /* max-height: 36rpx; */
}

.title-container text{
  font-size: 36rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}

.singer-container{
  font-size: 24rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}

.left-part .listen-times-icon{
  width: 60rpx;
  height: 56rpx;
  margin-right: 10rpx;
}

.option-container image{
  width: 64rpx;
  height: 72rpx;
}

.option-container text{
  font-size: 24rpx;
}

.share-container{
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.duration-container{
  color: white;
  background-color: #cccccc;
  font-size:30rpx;
  border-radius: 6rpx;
  font-family: Arial, Helvetica, sans-serif;
}