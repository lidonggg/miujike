/* pages/mine/mine.wxss */
.my-info-card{
  height: 266rpx;
  width: 724rpx;
  margin-left: 13rpx;
  border-radius: 12rpx;
  border: 1rpx solid #1111;
  margin-bottom: 20rpx;
  box-shadow: 1rpx 1rpx 8rpx #e9eef0,
              1rpx -1rpx 8rpx #e9eef0,
              -1rpx 1rpx 8rpx #e9eef0,
              -1rpx -1rpx 8rpx #e9eef0;
  position: relative;
}

.my-info-card .avatar-url{
  height: 130rpx;
  width: 130rpx;
  border-radius: 65rpx;
}

.my-info-card .infos-block{
  width: 500rpx;
  height: 180rpx;
  margin-left: 40rpx
}

.my-info-card .infos-block>view{
  height: 50%
}

.my-info-card .infos-block>view:first-child{
  border-bottom: 1rpx solid #979797
}

.my-info-card .infos-block .top-info-part>view{
  /* width: 50%;
  max-width: 50%; */
}

.my-info-card .infos-block .top-info-part{
  /* display: inline; */
  font-size: 36rpx;
  text-align: left;
  /* word-break: break-all */
  overflow: hidden;
  display: flex;
  align-items: center
}

.get-eggs-view{
  text-align: right;
  font-size: 25rpx;
  font-weight: 500;
  font-family: "Ping Fang SC";
  height: 55rpx;
  line-height: 55rpx;
  flex-grow: 0;
  position: absolute;
  right: 0;
  top: 50rpx
}

.my-info-card .infos-block .bottom-info-part{
  margin-top: 20rpx;
}

.my-info-card .infos-block .bottom-info-part>view,navigator{
  flex-grow: 1;
  font-size: 25rpx;
}

.my-info-card .infos-block .bottom-info-part>view>view:first-child,.bottom-info-part navigator>view:first-child{
  margin-bottom: 10rpx;
}

.my-info-card .infos-block .bottom-info-part>view>view:last-child,bottom-info-part>navigator>view:last-child{
  font-weight: 500
}

.one-menu-item{
  height: 120rpx;
  width: 690rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #D8D8D8;
  line-height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center
}

.one-menu-item >.my-item-img{
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.one-menu-item >.my-item-arrow{
  width: 56rpx;
  height: 56rpx;
}

.one-menu-item >text{
  width: 460rpx;
  font-weight: 500;
  font-size: 36rpx;
  font-family: "Ping Fang SC";
  color: rgb(65, 65, 65)
}
