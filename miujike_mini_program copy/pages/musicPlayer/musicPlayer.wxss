/* pages/musicPlayer/musicPlayer.wxss */
@import "../../templates/comment/commentTemplate.wxss";

.outer-scroll {
  width: 100%;
  height: calc(100vh - 110rpx);
}

.cover-container {
  height: 750rpx;
  width: 750rpx;
  position: relative;
}

.cover-container image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.to-top {
  position: fixed;
  width: 100%;
  height: 260rpx;
  top:0;
  left: 0;
  z-index: 999;
  background-color: white;
}

.no-top-top {
  background-color: white;
}

.info-text {
  color: white;
}

.title-info {
  position: absolute;
  left: 40rpx;
  bottom: 100rpx;
  font-weight: 500;
  font-size: 36rpx;
}

.singer-info {
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;
  font-size: 28rpx;
}

progress {
  width: 100%;
}

.controller-container {
  width: 750rpx;
  height: 240rpx;
  border-bottom: 1rpx solid #d8d8d8;
  position: relative;
}

.duration-show-text {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  font-size: 24rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.target-contoller {
  width: 75rpx;
  height: 58rpx;
}

.status-contoller {
  width: 210rpx;
  height: 210rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.comment-container {
  width: 710rpx;
  margin-left: 20rpx;
}

.comment-container .comment-tip {
  display: inline-flex;
  font-size: 30rpx;
  border-radius: 12rpx;
  height: 50rpx;
  width: 110rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
